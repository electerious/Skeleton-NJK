[
  {
    "name": "JS",
    "path": "assets/scripts/**/[^_]*.js",
    "handler": "rosid-handler-js"
  },
  {
    "name": "SCSS",
    "path": "assets/styles/[^_]*.{css,scss}*",
    "handler": "rosid-handler-scss"
  },
  {
    "name": "NJK",
    "path": "*.{html,njk}*",
    "handler": "rosid-handler-njk"
  },
  {
    "name": "NJK Component",
    "path": "assets/components/[^_]*/[^_]*.{html,njk}*",
    "handler": "rosid-handler-njk",
    "opts": {
      "prepend": "{% extends \"../_layout/_layout.njk\" %}{% block body %}",
      "append": "{% endblock %}",
      "data": {
        "root": "../../../"
      }
    }
  }
]